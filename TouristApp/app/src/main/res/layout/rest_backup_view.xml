<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/backup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Backup View "
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Mobile Data base"
        android:id="@+id/clearData"
        android:layout_marginTop="50dp"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:layout_below="@id/admin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="17sp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup Mobile Data to Server"
        android:id="@+id/backupServer"
        android:layout_marginTop="40dp"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:layout_below="@id/clearData"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="17sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:text="Load  Backup from Server"
        android:id="@+id/loadBackup"
        android:layout_below="@id/backupServer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="17sp"
        />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ipAddress"
        android:layout_below="@id/loadBackup"
        android:text="192.168.1.1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />


</RelativeLayout>
