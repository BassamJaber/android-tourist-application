<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/flightInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Flight profile"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/flightCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightInfo"
        android:layout_marginTop="40dp"
        android:text="Company "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/flightCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightCompany"
        android:layout_marginTop="40dp"
        android:text="Cost"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/flightDepartureDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightCost"
        android:layout_marginTop="40dp"
        android:text="Departure Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/flightArrivalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightDepartureDate"
        android:layout_marginTop="40dp"
        android:text="Arrival Date "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/companyText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="company name"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/flightCompany"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:id="@+id/costText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="0"
        android:minWidth="200dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="20dp"
        android:inputType="number"
        android:layout_below="@id/companyText"
        android:layout_toRightOf="@id/flightCost"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:id="@+id/depDateText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/costText"
        android:layout_toRightOf="@+id/flightDepartureDate"
        android:text="1.1.2015"
        android:textSize="20dp"
        android:gravity="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/arriDateText"
        android:textSize="20dp"
        android:text="1.1.2015"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toRightOf="@+id/flightArrivalDate"
        android:layout_below="@+id/depDateText" />





</RelativeLayout>
