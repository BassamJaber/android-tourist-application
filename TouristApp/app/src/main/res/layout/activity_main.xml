<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Administrator "
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:id="@+id/viewDestinations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="View Available Destinations"
        android:textColor="#000000"
        android:textSize="17sp" />


    <Button
        android:id="@+id/viewFlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDestinations"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="View Available Flights"
        android:textSize="17sp" />

    <Button
        android:id="@+id/viewCustomers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewFlights"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="View Customers"
        android:textSize="17sp" />

    <Button
        android:id="@+id/backupData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewCustomers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:minHeight="100dp"
        android:minWidth="300dp"
        android:shadowColor="#2FBAB5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Backup Data to Rest Server"
        android:textSize="17sp" />


</RelativeLayout>
